<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Interface" x:Class="Interface.MainWindow"
        Title="VVK Player" Height="500" Width="325" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="False">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15" />
            <RowDefinition Height="73" />
            <RowDefinition Height="53" />
            <RowDefinition Height="35" />
            <RowDefinition Height="36" />
            <RowDefinition Height="268" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <TextBox Name="SongName" HorizontalAlignment="Center" Height="20" Margin="0,20,0,0" TextWrapping="NoWrap" Text="Protest the Hero - Sex Tapes" TextAlignment="Center" VerticalAlignment="Top" Width="180" BorderBrush="Transparent" Grid.Row="1"/>
        <TextBox HorizontalAlignment="Center" Height="20" Margin="0,40,0,0" TextWrapping="Wrap" Text="1:57 / 4:30" TextAlignment="Center" VerticalAlignment="Top" Width="80" BorderBrush="Transparent" Grid.Row="1"/>
        <Button  HorizontalAlignment="Right" Height="25" Margin="0,12,5,0" VerticalAlignment="Top" Width="25" Style="{StaticResource ClearButton}" Click="MenuClick" Grid.Row="1">
            <StackPanel>
                <Image Name="MenuButtonImage" Source="Resources/Pictures/menu.png" />
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Right" Height="25" Margin="0,40,5,0" VerticalAlignment="Top" Width="25" Style="{StaticResource ClearButton}" Grid.Row="1">
            <StackPanel>
                <Image Source="Resources/Pictures/settings.png" />
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Height="35" Margin="15,20,0,0" VerticalAlignment="Top" Width="35" Style="{StaticResource ClearButton}" Click="DownloadClick" Grid.Row="1">
            <StackPanel>
                <Image Source="Resources/Pictures/download.png" />
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Height="35" Margin="55,20,0,0" VerticalAlignment="Top" Width="35" Style="{StaticResource ClearButton}" Click="PrevClick" Grid.Row="2">
            <StackPanel>
                <Image Source="Resources/Pictures/prev.png" />
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Height="35" Margin="100,20,0,0" VerticalAlignment="Top" Width="35" Style="{StaticResource ClearButton}" Click="PauseClick" Grid.Row="2">
            <StackPanel>
                <Image Source="Resources/Pictures/pause.png" />
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Height="35" Margin="145,20,0,0" VerticalAlignment="Top" Width="35" Style="{StaticResource ClearButton}" Click="PlayClick" Grid.Row="2">
            <StackPanel>
                <Image Source="Resources/Pictures/play.png" />
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Height="35" Margin="190,20,0,0" VerticalAlignment="Top" Width="35" Style="{StaticResource ClearButton}" Click="StopClick" Grid.Row="2">
            <StackPanel>
                <Image Source="Resources/Pictures/stop.png" />
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Height="35" Margin="235,20,0,0" VerticalAlignment="Top" Width="35" Style="{StaticResource ClearButton}" Click="NextClick" Grid.Row="2">
            <StackPanel>
                <Image Source="Resources/Pictures/next.png" />
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Height="35" Margin="10,2,0,0" VerticalAlignment="Top" Width="35" Style="{StaticResource ClearButton}" Click="DownloadClick" Grid.Row="4">
            <StackPanel>
                <Image Source="Resources/Pictures/download.png" />
            </StackPanel>
        </Button>
        <TextBox Name="Search" HorizontalAlignment="Left" Height="21" Margin="55,9,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="130" BorderThickness="1,1,0,1" GotFocus="RemoveTextSearch" LostFocus="AddTextSearch" Grid.Row="4"/>
        <Button HorizontalAlignment="Left" Height="35" Margin="177,2,0,0" VerticalAlignment="Top" Width="35" Style="{StaticResource ClearButton}" Click="SearchClick" Grid.Row="4">
            <StackPanel>
                <Image Source="Resources/Pictures/search.png" />
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Height="35" Margin="230,2,0,0" VerticalAlignment="Top" Width="35" Style="{StaticResource ClearButton}" Click="MixClick" Grid.Row="4">
            <StackPanel>
                <Image Source="Resources/Pictures/mix.png" />
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Height="35" Margin="282,2,0,0" VerticalAlignment="Top" Width="35" Style="{StaticResource ClearButton}" Click="SortClick" Grid.Row="4">
            <StackPanel>
                <Image Source="Resources/Pictures/sort.png" />
            </StackPanel>
        </Button>
        <TextBox HorizontalAlignment="Left" Height="268" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="325" BorderBrush="Transparent" Grid.Row="5"/>
        <ListBox Name="MenuList" HorizontalAlignment="Right" Margin="0,15,28,0" VerticalAlignment="Top" Width="119" Visibility="Hidden" SelectionChanged="MenuListSelectionHandler" Grid.Row="1">
            <ListBoxItem>Login</ListBoxItem>
        </ListBox>


    </Grid>

</Window>
